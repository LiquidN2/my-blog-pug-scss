extends ../../layout/main

block content
  section.portfolio
    .portfolio__container.container
      h2.heading-secondary.portfolio__heading Portfolio

      // PORTFOLIO FILTER
      form.portfolio__filter.filter.filter__list
        div.filter__item-container
          input#react.filter__input(type="checkbox", name="react")/
          label.filter__item(for="react") React

        div.filter__item-container
          input#node.filter__input(type="checkbox", name="nodejs")/
          label.filter__item(for="node") NodeJS

        div.filter__item-container
          input#nextjs.filter__input(type="checkbox", name="nextjs")/
          label.filter__item(for="nextjs") NextJS

        div.filter__item-container
          input#mongodb.filter__input(type="checkbox", name="mongodb")/
          label.filter__item(for="mongodb") MongoDB

        div.filter__item-container
          input#graphql.filter__input(type="checkbox", name="graphql")/
          label.filter__item(for="graphql") GraphQL

        div.filter__item-container
          input#headlesscms.filter__input(type="checkbox", name="headlesscms")/
          label.filter__item(for="headlesscms") Headless CMS

        div.filter__item-container
          input#htmlcss.filter__input(type="checkbox", name="htmlcss")/
          label.filter__item(for="htmlcss") HTML & CSS

