include ../components/mixins/_logo

-
  var pagePath = 'http://localhost:1234'

// HEADER
header.header
  .header__container.container
    // LOGO BOX
    a.header__logo-box(href='/')
      +logo('header__logo')
      .header__logo-text Hugh's Home

    // SEARCH
    form.header__search
      svg.header__search-icon(
        xmlns='http://www.w3.org/2000/svg',
        fill='none',
        viewBox='0 0 24 24',
        stroke='currentColor'
      )
        path(
          stroke-linecap='round',
          stroke-linejoin='round',
          stroke-width='2',
          d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'
        )/
      input.header__search-input(
        type='text',
        placeholder='Search for projects'
      )/

    // NAV & DARK MODE TOGGLE
    .header__group-nav-toggle
      // NAV
      nav.header__nav
        ul.header__nav-list
          li.header__nav-item
            a.header__nav-link(href=`${pagePath}/about.html`) About Me
          li.header__nav-item
            a.header__nav-link(href=`${pagePath}/portfolio/index.pug`) Portfolio
          li.header__nav-item
            a.header__nav-link(href=`${pagePath}/blogs/index.pug`) Blog
          li.header__nav-item
            a.header__nav-link(href=`${pagePath}/contact.html`) Contact

      // DARK MODE TOGGLE
      .header__toggle-container
        label.toggle
          input#toggle-dark-mode.toggle__checkbox(type='checkbox')/
          span.toggle__slider.toggle__slider--round
